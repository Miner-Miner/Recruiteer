<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".EmployerHomeActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/employer_home" />

    <Button
        android:id="@+id/btnAddJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_margin="40dp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:tag="add"
        android:text="Add Job Post"/>

    <Button
        android:id="@+id/btnCheckDeleteJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="checkDel"
        android:textSize="20dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Check\nDelete Job Post"/>


</LinearLayout>