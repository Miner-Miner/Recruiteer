<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".ProfileCreateActivity">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:lottie_rawRes="@raw/profile"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />
    <ImageButton
        android:id="@+id/imageBtnProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />
    <EditText
        android:id="@+id/etProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Name"
        android:singleLine="true"
        android:background="@drawable/et_login"
        android:textColor="@color/black"
        android:textColorHint="@color/teal_200"
        android:textAlignment="center"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:weightSum="100">
        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="25"
            app:ccp_showFullName="false"
            app:ccp_showPhoneCode="true"
            app:ccp_showNameCode="false"
            app:ccp_showFlag="true"
            app:ccp_autoFormatNumber="true"
            app:ccp_showArrow="true"
            app:ccp_textSize="16sp"
            app:ccp_arrowSize="16sp"
            app:ccpDialog_keyboardAutoPopup="false"
            android:gravity="center" />
        <EditText
            android:id="@+id/etProfilePhone"
            android:textColorHint="@color/teal_200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:hint="Phone Number"
            android:background="@drawable/et_login"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:inputType = "phone"
            android:singleLine="true"/>
    </LinearLayout>
    <EditText
        android:id="@+id/etProfileAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Address"
        android:textAlignment="center"
        android:background="@drawable/et_login"
        android:textColor="@color/black"
        android:textColorHint="@color/teal_200"
        android:textSize="20dp"
        android:layout_marginTop="3dp"/>
    <Button
        android:id="@+id/btnProfileConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Confirm"
        android:textSize="20dp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="30dp"/>


</LinearLayout>