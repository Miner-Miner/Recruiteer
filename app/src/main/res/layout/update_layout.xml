<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/updateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:text = "Update"
        android:fontFamily="@font/angelica"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/etUpdateJobTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job Title"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/etUpdateJobSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job Salary"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/spinnerUpdatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="12"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinnerUpdateTag1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>
        <Spinner
            android:id="@+id/spinnerUpdateTag2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>
        <Spinner
            android:id="@+id/spinnerUpdateTag3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <EditText
            android:id="@+id/etUpdateRequirement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Job Requirement"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="8"/>
        <Button
            android:id="@+id/btnUpdateAddRequirement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="add"
            android:background="@drawable/plus"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row2Update"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <EditText
            android:id="@+id/etUpdateRequirement2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Job Requirement"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="8"/>
        <Button
            android:id="@+id/btnUpdateAddRequirement2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="add"
            android:background="@drawable/plus"/>
        <Button
            android:id="@+id/btnUpdateRemoveRequirement2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="remove2"
            android:background="@drawable/minus"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row3Update"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <EditText
            android:id="@+id/etUpdateRequirement3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Job Requirement"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="8"/>
        <Button
            android:id="@+id/btnUpdateAddRequirement3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="add"
            android:background="@drawable/plus"/>
        <Button
            android:id="@+id/btnUpdateRemoveRequirement3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="remove3"
            android:background="@drawable/minus"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row4Update"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <EditText
            android:id="@+id/etUpdateRequirement4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Job Requirement"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="8"/>
        <Button
            android:id="@+id/btnUpdateAddRequirement4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="add"
            android:background="@drawable/plus"/>
        <Button
            android:id="@+id/btnUpdateRemoveRequirement4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="remove4"
            android:background="@drawable/minus"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row5Update"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <EditText
            android:id="@+id/etUpdateRequirement5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Job Requirement"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="8"/>
        <Button
            android:id="@+id/btnUpdateAddRequirement5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="add"
            android:background="@drawable/plus"/>
        <Button
            android:id="@+id/btnUpdateRemoveRequirement5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="remove5"
            android:background="@drawable/minus"/>
    </LinearLayout>
    <EditText
        android:id="@+id/etUpdateJobSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:hint="Job Summary"/>

    <Button
        android:id="@+id/btnUpdatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:text="Update Post"/>

</LinearLayout>